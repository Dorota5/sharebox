<p id="notice"><%= notice %></p>

<h1>Listing Documents</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.user_id %></td>
        <td><%= image_tag document.uploaded_file.url(:medium) %></td>
        <td><%= link_to 'Download', download_url(document) %></td>
        <td><%= link_to 'Show', document %></td>
        <% if document.user == current_user %>
          <td><%= link_to 'Edit', edit_document_path(document) %></td>  
          <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

